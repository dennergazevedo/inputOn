{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "ES6",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "build/dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
  ],
}